{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": false,
        "isolatedModules": true,
        "strict": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "vite.config.js"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}